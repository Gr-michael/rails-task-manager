<h1>My Tasks</h1>

<% @tasks.each do |task|%>
  <p>
    <%= "#{task.title}, #{task.completed}" %>
    <%= link_to "details", task_path(task) %>
    <%= link_to "Delete #{task.title}",
            delete_task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </p>
<% end %>


<h2><%= link_to "Create New Task", new_task_path %></h2>
